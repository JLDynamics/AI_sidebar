{
  "manifest_version": 3,
  "name": "AI Sidebar Assistant",
  "version": "1.3",
  "description": "A foldable sidebar to ask AI",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "*://*/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "Readability.js",
        "content.js"
      ]
    }
  ],
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "action": {
    "default_title": "Open AI Sidebar"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "marked.min.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}